<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">Crear una Cuenta</h1>

      <%# Usa form_with y asócialo al modelo @user %>
      <%= form_with model: @user do |form| %>

        <%# Este bloque es CRUCIAL para mostrar por qué falla el registro %>
        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>Por favor corrige estos errores:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :email_address, class: "form-label" %>
          <%= form.email_field :email_address, required: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "Contraseña", class: "form-label" %>
          <%= form.password_field :password, required: true, class: "form-control" %>
          <div class="form-text">
            (Mínimo 5 caracteres)
          </div>
        </div>

        <div class="d-grid">
          <%= form.submit "Registrarse", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to "Ya tienes una cuenta? Inicia Sesión", sign_in_path %>
      </div>
    </div>
  </div>
</div>